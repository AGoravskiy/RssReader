@model  RssReader.Services.Models.ViewModels.PostView

@{
    ViewBag.Title = "Index";
}

    <div>
        <h2>
            Новостная лента
        </h2>
        <br />
        @using (Ajax.BeginForm("PageListPartial", new AjaxOptions { UpdateTargetId = "results", InsertionMode = InsertionMode.Replace }))
        {
            <div>
                Источник ленты
                @Html.DropDownListFor(model => model.ChannelId, ViewBag.Channels as SelectList, "Все")
            </div>
            <br />
            <div>
                @Html.RadioButton("SortProperty", "ByDate")
                <span>Сортировка по дате</span>
                @Html.RadioButton("SortProperty", "ByChannel")
                <span>Сортировка по источнику</span>
            </div>
            <br />
            <div>
                <input type="submit" class="btn btn-primary" value="Просмотреть" />
            </div>
            <br />
        }

        <div id="results"></div>
    </div>

@Scripts.Render("~/scripts/jquery-3.4.1.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")